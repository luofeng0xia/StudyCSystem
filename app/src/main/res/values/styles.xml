<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>
    <!--<item name="android:textColorPrimary">@android:color/white</item>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <!-- 抽屉栏覆盖顶部状态栏 -->
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- Base application theme. -->

    <!-- 自定义章节练习页面主题-->
    <style name="TrainingTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTraining</item>
        <item name="colorPrimaryDark">@color/colorTraining</item>
    </style>

    <style name="TrainingTheme.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 透明界面背景 -->
    <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    <style name="TrainingTheme.Transparent" parent="TrainingTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- 自定义章节练习页面主题-->

    <!-- 自定义系统考试页面主题-->
    <style name="TestTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTest</item>
        <item name="colorPrimaryDark">@color/colorTest</item>
    </style>

    <style name="TestTheme.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TestTheme.Transparent" parent="TestTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- 自定义系统考试页面主题-->

    <!-- 自定义课堂作业页面主题-->
    <style name="TaskTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTask</item>
        <item name="colorPrimaryDark">@color/colorTask</item>
    </style>

    <style name="TaskTheme.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TaskTheme.Transparent" parent="TaskTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- 自定义课堂作业页面主题-->

    <!-- 自定义学习资料页面主题-->
    <style name="DataTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorData</item>
        <item name="colorPrimaryDark">@color/colorData</item>
    </style>

    <style name="DataTheme.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DataTheme.Transparent" parent="DataTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- 自定义学习资料页面主题-->

    <!--自定义设置界面LinearLayout的style-->
    <style name="LinearLayout"/>
    <style name="LinearLayout.setting" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/btn_item_whit2grey</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!--自定义设置界面的TextView的style-->
    <style name="TextView"/>
    <style name="TextView.setting" >
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
