        <LinearLayout
            android:id="@+id/ll_zuoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="5dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/ll_shangyiti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_shangyiti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一题" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_woyaotiwen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_woyaotiwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要提问" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_jiaojuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_jiaojuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交卷" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_daan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_daan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答案" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一题" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
