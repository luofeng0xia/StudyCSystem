<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_zj_item"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon_item_normal"
            android:background="@drawable/shape_normal_yuan"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:src="@mipmap/ic_help_white_24dp"
            android:background="@drawable/shape_change_yuan"
            android:visibility="gone"
            android:id="@+id/iv_icon_item_wrong"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:src="@mipmap/ic_check_circle_white_24dp"
            android:background="@drawable/shape_change_yuan"
            android:visibility="gone"
            android:id="@+id/iv_icon_item_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:id="@+id/tv_tihao_zj_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_title_zj_item"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>