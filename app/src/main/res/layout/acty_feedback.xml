<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>
    <EditText
        android:id="@+id/et_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="在这里写下你的意见和想法吧"
        android:lines="6"
        android:textColor="@android:color/black"/>
    <EditText
        android:id="@+id/et_feedback_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="left|center_vertical"
        android:hint="你的联系方式(邮箱,选填)"
        android:singleLine="true"
        android:textColor="@android:color/black" />
    <RadioGroup
        android:id="@+id/rg_feedback_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_type_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="意见反馈"/>

        <RadioButton
            android:id="@+id/rb_type_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错误报告"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_feedback_submit"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="提交"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="bottom|left"
        android:text="* 你的错误反馈/意见建议能帮我们打造更好的应用"
        android:textSize="12sp"/>

</LinearLayout>